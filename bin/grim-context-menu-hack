#!/bin/sh -e

# Capture whole screen
grim /tmp/screenshot.png

# Show the full screenshot
imv -f /tmp/screenshot.png &
pid=$!

# Now allow to select part of it, forwarding arguments
grim -g $(slurp) "$@" || code=$?

# Close imv
kill "$pid"

if [ -n "$code" ]; then
    # Proxy return code
    exit "$code"
fi
