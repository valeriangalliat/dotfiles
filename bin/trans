#!/bin/sh -e

from=$1; shift
to=$1; shift
text=$@

curl -sX POST 'https://translate.google.com/' \
    --data "sl=$from&tl=$to&text=$text" \
    -H 'Content-Type: application/x-www-form-urlencoded' \
    -H 'User-Agent:' \
    | xmllint --html --xpath '//span[@id="result_box"]/descendant::*/text()' - 2>/dev/null
