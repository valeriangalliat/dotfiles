#
# ~/.profile
#

export XDG_DATA_HOME=~/.local/share
export XDG_CONFIG_HOME=~/.config
export XDG_CACHE_HOME=~/.cache

export LANG=en_US.UTF-8

PATH=~/.local/bin:$PATH # Local bin
PATH=$DOTFILES/deps/misc/git-extras/bin:$PATH # Git extras
PATH=$DOTFILES/bin:$PATH # Dotfiles' bin
PATH=~/bin:$PATH # User bin
export PATH

MANPATH=$(manpath)
MANPATH=$DOTFILES/src/git/extras/man:$MANPATH # Git extras
MANPATH=$DOTFILES/man:$MANPATH # Dotfiles' man
export MANPATH

# Include dynamically generated environment variables
source "$DOTFILES/src/shell/dircolors"
source "$DOTFILES/src/shell/graceful"

# vim: ft=sh
