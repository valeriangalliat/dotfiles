"
" ~/.vimperatorrc
"

" No navigation and scrollbars
set gui=nonavigation
set scrollbars=false
set editor='urxvt -e vim'
set urlseparator='\n'

" Pause music on YouTube video page open (this is gold)
autocmd PageLoadPre ^https://www\\.youtube\\.com/watch\\? :silent !mpc pause

" Yank all tabs' URL
nnoremap gya :js yankAll()<CR>

:js << EOF
function yankAll () {
  const urls = tabs.get().map(info => info[2])
  util.copyToClipboard(urls.join('\n'))
  liberator.echomsg('Copied ' + urls.length + ' URLs')
}
EOF

" vim: ft=vimperator
