!
! ~/.config/x11/resources
!

! Font
*.font: xft:monospace:size=8

! Terminal style
URxvt.background: black
URxvt.foreground: white
URxvt.scrollBar: false

! No strange yellow popup
URxvt.iso14755: false

!
! Extensions are from <https://github.com/muennich/urxvt-perls>, the key
! bindings and default options are described there.
!

! Enable extensions
URxvt.perl-ext-common: keyboard-select,url-select,clipboard

! Keyboard select
URxvt.keysym.M-Escape: perl:keyboard-select:activate

! Clickable URLs and keyboard select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/firefox
URxvt.url-select.underline: true

! Copy/paste (requires xsel(1))
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
