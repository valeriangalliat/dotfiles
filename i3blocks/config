#
# ~/.config/i3blocks/config
#

command=$DOTFILES/i3blocks/i3blocks-contrib/$BLOCK_NAME/$BLOCK_NAME
separator_block_width=15
markup=none

[volume]
interval=persist
command=$DOTFILES/i3blocks/volume

[disk]
label=💻 
interval=60

[memory]
label=🧠 
interval=30

[temperature]
label=🔥 
interval=30
command=$DOTFILES/i3blocks/i3blocks-contrib/$BLOCK_NAME/$BLOCK_NAME | sed 's/\.[0-9]*//;s/C$//'

[iface]
label=🌐 
interval=60
command=$DOTFILES/i3blocks/i3blocks-contrib/$BLOCK_NAME/$BLOCK_NAME | xargs

[wifi]
command=$DOTFILES/i3blocks/i3blocks-contrib/$BLOCK_NAME/$BLOCK_NAME | i3blocks-recolor
label=📶 WIFI 
INTERFACE=wlp2s0
interval=10

[battery]
command=$DOTFILES/i3blocks/i3blocks-contrib/$BLOCK_NAME/$BLOCK_NAME | i3blocks-recolor
label=⚡ 
interval=30
min_width=⚡ 100%

[time]
label=📅 
command=date | awk '{NF -= 2} 1'
interval=1
